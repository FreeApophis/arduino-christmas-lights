<Window x:Class="ChristmasLightsSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChristmasLightsSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="1200">
    <Canvas Name="MainCanvas">
        <Label Name="FrameLabel" Canvas.Bottom="10" Canvas.Left="120" Content="Frame: 0"></Label>
        <ComboBox Name="AnimationDropDown"  Canvas.Bottom="10" Width="100" Canvas.Left="10" SelectionChanged="OnAnimationChanged"></ComboBox>
    </Canvas>
</Window>
